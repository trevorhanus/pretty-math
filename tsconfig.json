{
    "compilerOptions": {
        "baseUrl": "./src",
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "incremental": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": ".dist",
        "pretty": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "target": "es5",
        "lib": [
            "dom",
            "esnext"
        ]
    },
    "exclude": [
        "node_modules",
        ".dist",
        "docs",
        "src/math-server"
    ]
}
